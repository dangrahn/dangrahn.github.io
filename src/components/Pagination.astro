---
interface Props {
  prevLink?: string
  prevText?: string
  nextLink?: string
  nextText?: string
}

const { prevLink, prevText, nextLink, nextText } = Astro.props
---

<div class="mt-8 flex flex-row flex-wrap gap-3 justify-center text-xs">
  {
    prevLink && (
      <a
        href={prevLink}
        aria-label="Previous Page"
        class="py-2 px-4 border border-foreground/20 text-foreground/60 hover:text-foreground hover:border-foreground/40 transition-all duration-150"
      >
        &larr; {prevText || 'Previous'}
      </a>
    )
  }
  {
    nextLink && (
      <a
        href={nextLink}
        aria-label="Next Page"
        class:list={[
          'py-2 px-4 border border-foreground/20 text-foreground/60 hover:text-foreground hover:border-foreground/40 transition-all duration-150',
          prevLink && 'ml-auto',
        ]}
      >
        {nextText || 'Next'} &rarr;
      </a>
    )
  }
</div>
